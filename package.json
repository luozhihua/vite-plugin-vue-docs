{
  "name": "monorepo",
  "version": "0.0.1",
  "description": "monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meetqy/vite-plugin-vue-docs.git"
  },
  "scripts": {
    "setup": "yarn && lerna bootstrap && lerna link --force-local",
    "clean": "lerna clean && rm -rf node_modules",
    "build": "lerna run build",
    "dev": "lerna run dev",
    "prepare": "husky install",
    "test": "lerna run test",
    "lint": "eslint ./packages{/,\\}**{/,\\}src/**/*.{ts,js}",
    "fix": "prettier --write ./packages{/,\\}**{/,\\}src/**/*.{vue,ts,js}"
  },
  "keywords": [
    "vue",
    "vite",
    "vite-plugin"
  ],
  "author": "meetqy <meetqy@qq.com>",
  "bugs": {
    "url": "https://github.com/meetqy/vite-plugin-vue-docs/issues"
  },
  "homepage": "https://github.com/meetqy/vite-plugin-vue-docs#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "typescript": "^4.3.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn workspace @bige/vite-plugin-vue-docs test"
    ],
    "*.{ts,js,vue}": "yarn fix"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
